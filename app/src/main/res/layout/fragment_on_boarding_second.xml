<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.fragment.OnBoardingSecondFragment">

    <Button
        android:id="@+id/on_boarding_second_button_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background2"
        android:paddingVertical="20dp"
        android:text="test"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nextbutton" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/on_boarding_second_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/speaker"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/on_boarding_second_textview_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="주변 소음을 측정중입니다"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/on_boarding_second_animation"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/on_boarding_second_animation"
        app:layout_constraintTop_toBottomOf="@+id/on_boarding_second_animation" />

    <TextView
        android:id="@+id/on_boarding_second_textview_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="잠시만 기다려주세요"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/on_boarding_second_textview_text1"
        app:layout_constraintStart_toStartOf="@+id/on_boarding_second_textview_text1"
        app:layout_constraintTop_toBottomOf="@+id/on_boarding_second_textview_text1" />


</androidx.constraintlayout.widget.ConstraintLayout>