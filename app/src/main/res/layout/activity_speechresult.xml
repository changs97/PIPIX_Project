<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/speechresult_imageview_btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_pageback"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검사결과지"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
    />

    <GridLayout
        android:background="@drawable/table_outside"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <TextView
            android:gravity="center"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:padding="10dp"
            android:text="어음청취역치\n(SRT)"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:padding="10dp"
            android:text="어음명료도\n(WRS)"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:padding="10dp"
            android:text="오른쪽"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:id="@+id/speechresult_textview_rightsrt"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="15dB"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/speechresult_textview_rightwrs"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="9/10"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:padding="10dp"
            android:text="왼쪽"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/speechresult_textview_leftsrt"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="11dB"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/speechresult_textview_leftwrs"
            android:background="@drawable/table_outside"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="7/10"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </GridLayout>


<TextView
    android:layout_marginHorizontal="40sp"
    android:textSize="20sp"
    android:textColor="@color/gray"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="어음청취역치란?\n검사자가 단어를 듣고 이해할 수 있는 수준의 가장 작은 소리 크기를 뜻합니다. 수치가 낮을수록 청력이 좋음을 의미합니다."/>
    <TextView
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40sp"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어음명료도란?\n검사자가 듣기 편안한 소리로 10개의 단어를 듣고 맞춘 단어 수를 의미합니다. 10개 중 7개 이하라면 병원에서 정밀 검사를 받으시길 바랍니다."/>
</LinearLayout>